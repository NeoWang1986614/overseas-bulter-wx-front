/* pages/user-info/user-info.wxss */
.wrap {
  position: fixed;
  width: 100%;
  height: 100%;
  /* background: khaki; */
}

.item-container {
  height: 120rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* border-bottom: 1rpx solid rgba(174, 176, 177, 0.74); */
}

.text-static {
  /* background: lightcoral; */
  width: 140rpx;
  height: 50rpx;
  font-size: 26rpx;
  color: gray;
  line-height: 50rpx;
  padding-left: 20rpx;
  text-align: left;
}

.input-container {
  width: 580rpx;
  height: 50rpx;
  /* background: seashell; */
  /* border-bottom: 1rpx solid lightblue; */
}

input {
  /* background: lightgreen; */
  text-align: right;
  font-size: 26rpx;
  color: black;
  margin-right: 10rpx;
}

.verification-input-container {
  width: 360rpx;
}

.verification-input {
  text-align: center;
}

.verification-code-btn-container {
  width: 200rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

.verification-code-btn {
  width: 100%;
  height: 100%;
  background: lightseagreen;
  padding: 0;
  margin: 0;
  font-size: 26rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.verification-code-btn:after {
  border:none;
}

.verification-code-btn-hover {
  background: rgb(25, 139, 134);
}

.save-item-container {
  position: absolute;
  width: 100%;
  height: 100rpx;
  /* background: white; */
  bottom: 20rpx;
}

.save-button {
  width: 94%;
  height: 100%;
  background: rgb(3, 168, 3);
  font-size: 40rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.save-button-hover {
  background: green;
}

.save-button:after {
  border: none;
}