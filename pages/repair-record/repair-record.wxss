.wrap {
  position: fixed;
  width: 100%;
  height: 100%;
  background: white;
  display: flex;
  font-size: 30rpx;
  color: gray;
  flex-direction: column;
}

.block-container {
  min-height: 10rpx;
  /* background: orange; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.house-desc {
  margin-top: 20rpx;
  width: 96%; 
  /* background: lightblue;  */
  font-size: 34rpx;
}

.report-time {
  width: 96%;
  color: black;
}

.repair-time{
   width: 96%;
   color: black;
}

.complete-time{
   width: 96%;
   color: black;
}

.status{
   width: 96%;
   color: black;
   margin-bottom: 60rpx;
}

.comment{
   margin-bottom: 20rpx;
   width: 96%;
   color: black;
}

.line {
  width: 94%; 
  height: 4rpx;
  background: lightblue; 
}
.related-image {
  margin-top: 30rpx;
  width: 96%;
  display: flex;
  color: black;
  flex-direction: row;
  flex-wrap: wrap;
}

.image-modal {
  position: fixed;
  width: 100%;
  height: 100%;
  background: black;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cost {
  width: 96%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: black;
  font-size: 34rpx;
}